<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <text.customisation.MarigoldText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kamoga Property Agents App helps people in the property market to find their ideal home, land or commercial property.Our goal is to empower consumers with the most thorough information in the market and get them in contact with the developers,agents and landlords.We aim to have our listings give you us much information about the property as possible. "
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="17dp"
        android:textAppearance="?android:attr/textAppearanceMedium"


        android:layout_centerHorizontal="true" />
    <text.customisation.MarigoldText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
       android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="We continually scan our listings and make sure that any issues that are low quality or inaccurate are removed.So you can browse ease."
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</LinearLayout>